{
  "name": "gantt-chart",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "build:exe": "pnpm build && pkg --config package.json launcher/server.cjs --targets node22-win-x64 --output dist-exe/GanttChart.exe --compress GZip",
    "deploy": "pnpm build && npx gh-pages -d dist"
  },
  "pkg": {
    "assets": [
      "dist/**/*"
    ]
  },
  "dependencies": {
    "@radix-ui/react-context-menu": "^2.2.15",
